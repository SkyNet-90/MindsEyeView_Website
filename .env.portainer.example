# Database Password
# Generate with: openssl rand -base64 16 | tr -d '=+/' | head -c 20
DB_PASSWORD=your_secure_db_password_here

# NextAuth Secret
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=your_nextauth_secret_here

# Cloudflare Tunnel Token
# Get from: https://one.dash.cloudflare.com/ -> Zero Trust -> Access -> Tunnels
CF_TUNNEL_TOKEN=your_cloudflare_tunnel_token_here

# Admin User Credentials (will be auto-created on first deploy)
ADMIN_EMAIL=admin@mindseyeview.net
ADMIN_PASSWORD=YourSecurePassword123!
ADMIN_NAME=Admin

# GitHub Token (ONLY needed for PRIVATE repositories)
# Leave blank/unset for public repos
# Generate at: https://github.com/settings/tokens
# Needs 'repo' scope for private repos
GITHUB_TOKEN=your_github_personal_access_token_here
